{
  "name": "glotpress/gp-translation-helpers",
  "type": "wordpress-plugin",
  "description": "Helpers to discuss the translations in GlotPress.",
  "keywords": [
    "translations",
    "wordpress",
    "i18n"
  ],
  "homepage": "https://glotpress.blog/",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
    "wp-coding-standards/wpcs": "^2.2",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "gettext/languages": "^2.6",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "scripts": {
    "format": "@php ./vendor/bin/phpcbf --report=summary,source",
    "lint": "@php ./vendor/bin/phpcs --report=summary,source"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
